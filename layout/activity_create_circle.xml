<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ajay.friendlocation.CreateCircleActivity">
    <FrameLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="left|center"
            android:src="@drawable/ic_arrow_back_white_24dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_circle"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="18dp"
            />
    </FrameLayout>

    <EditText
        android:id="@+id/etCircleName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/circle_name"
        android:layout_centerVertical="true"
        android:inputType="text"
        android:text="Friend"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimary"
        android:backgroundTint="@color/colorPrimaryDark"
        />

    <Button
        android:id="@+id/btnCreateCircle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Create Circle"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@color/colorPrimary"
        />

</RelativeLayout>
